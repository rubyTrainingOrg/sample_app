<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "erreur") %>
		ont empêché votre inscription. </h2>
		<p>Merci de corriger les champs suivants </p>
		<ul>
			<%=@user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>